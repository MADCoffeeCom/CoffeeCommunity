<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicationCard"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/linear_gray_background">


    <ImageView
        android:id="@+id/applicantPic"
        android:layout_width="80dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_outline"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barista1" />

    <TextView
        android:id="@+id/applicantNameText"
        style="@style/c6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/applicantPic"
        app:layout_constraintTop_toTopOf="@+id/applicantPic" />

    <TextView
        android:id="@+id/applicantExperienceText"
        style="@style/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="1 years"
        app:layout_constraintBottom_toBottomOf="@+id/textview51"
        app:layout_constraintStart_toEndOf="@+id/textview51" />

    <ImageButton
        android:id="@+id/acceptAppBtn"
        style="@style/primaryBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/declineAppBtn"
        app:srcCompat="@drawable/ic_accept" />

    <ImageButton
        android:id="@+id/declineAppBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_reject" />

    <TextView
        android:id="@+id/textview51"
        style="@style/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Years of Experience:"
        app:layout_constraintStart_toStartOf="@+id/applicantNameText"
        app:layout_constraintTop_toBottomOf="@+id/applicantNameText" />

</androidx.constraintlayout.widget.ConstraintLayout>