<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WalletActivity">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView9"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Wallet"
        app:layout_constraintBottom_toBottomOf="@+id/backBtn"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="@+id/backBtn" />

    <TextView
        android:id="@+id/walletAmountText"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="0.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView15"
        style="@style/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="RM"
        app:layout_constraintBottom_toBottomOf="@+id/walletAmountText"
        app:layout_constraintEnd_toStartOf="@+id/walletAmountText"
        app:layout_constraintTop_toTopOf="@+id/walletAmountText" />

    <Button
        android:id="@+id/transactionBtn"
        style="@style/smallPrimaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Transactions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletAmountText" />

    <TextView
        android:id="@+id/textView17"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Top Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionBtn" />

    <TextView
        android:id="@+id/textView19"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Bank Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topUpAmountTextBox" />

    <Button
        android:id="@+id/topUp30Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:text="30"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topUp5Btn" />

    <Button
        android:id="@+id/topUp50Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="50"
        app:layout_constraintEnd_toStartOf="@+id/topUp100Btn"
        app:layout_constraintStart_toEndOf="@+id/topUp30Btn"
        app:layout_constraintTop_toTopOf="@+id/topUp30Btn" />

    <Button
        android:id="@+id/topUp100Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/grey"
        android:text="100"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topUp50Btn" />

    <Button
        android:id="@+id/topUp20Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/grey"
        android:text="20"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topUp10Btn" />

    <Button
        android:id="@+id/topUp5Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:text="5"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/topUp10Btn"
        style="@style/smallPrimaryBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/grey"
        android:text="10"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintEnd_toStartOf="@+id/topUp20Btn"
        app:layout_constraintStart_toEndOf="@+id/topUp5Btn"
        app:layout_constraintTop_toTopOf="@+id/topUp5Btn" />

    <EditText
        android:id="@+id/topUpAmountTextBox"
        style="@style/defaultTextBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:hint="Enter the amount..."
        android:inputType="textPersonName"
        android:textColorHint="@color/disable_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topUp50Btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bankCardRecyclerView"
        android:layout_width="409dp"
        android:layout_height="120dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <Button
        android:id="@+id/topUpWalletBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        style="@style/primaryBtn"
        android:text="Top Up" />

</androidx.constraintlayout.widget.ConstraintLayout>