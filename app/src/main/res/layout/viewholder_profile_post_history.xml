<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coffeePostHistoryCard"
    android:layout_width="112dp"
    android:layout_height="132dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/linear_gray_background">


    <ImageView
        android:id="@+id/imgPostHistory"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_outline"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coffee1" />

    <TextView
        android:id="@+id/txtPostHistoryTitle"
        style="@style/c2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:text="Title"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgPostHistory"
        app:layout_constraintTop_toBottomOf="@+id/imgPostHistory" />

    <ImageView
        android:id="@+id/imageViewPostLikes"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@+id/txtPostTotalLikes"
        app:layout_constraintEnd_toStartOf="@+id/txtPostTotalLikes"
        app:layout_constraintTop_toTopOf="@+id/txtPostTotalLikes" />

    <TextView
        android:id="@+id/txtPostTotalLikes"
        style="@style/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPostHistory" />


</androidx.constraintlayout.widget.ConstraintLayout>