<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    ================================Button==========================================-->
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="primaryBtn" parent="@style/button" />

    <style name="secondaryBtn" parent="@style/button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="smallPrimaryBtn" parent="primaryBtn">
        <item name="android:layout_width">120dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="smallSecondaryBtn" parent="secondaryBtn">
        <item name="android:layout_width">120dp</item>
        <item name="android:textSize">14dp</item>
    </style>

<!--    ========================================Text================================-->
    <style name="h1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="c1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="c2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12dp</item>
    </style>
    
<!--    ==============================================TextBox==================================-->
    <style name="defaultTextBox">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="multiLineTextBox" parent="@style/defaultTextBox">
        <item name="android:inputType">textAutoComplete|textMultiLine</item>
    </style>

<!--    ==================================RatingBar================================-->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/disable_grey</item>
        <item name="colorControlActivated">#FFD666</item>
    </style>
</resources>